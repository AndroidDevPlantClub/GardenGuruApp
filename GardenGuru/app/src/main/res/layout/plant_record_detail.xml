<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/plant_record_asset"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/RecordTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Plant Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/RecordDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="10/29/2024"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/RecordTitleText"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/RecordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecordTitleText"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/WateringText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RecordText"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/SunlightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WateringText"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/SoiltypeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Example"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SunlightText"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:src="@drawable/baseline_local_florist_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.963"
        app:layout_constraintStart_toEndOf="@+id/RecordDateText" />
</androidx.constraintlayout.widget.ConstraintLayout>