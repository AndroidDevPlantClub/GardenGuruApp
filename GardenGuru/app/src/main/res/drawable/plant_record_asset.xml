<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer Shape -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="10dip"/>
            <stroke android:width="1dp"/>
            <gradient
                android:type="radial"
                android:startColor="#567849"
                android:endColor="#A3C399"
                android:centerX="0.5"
                android:centerY="0.5"
                android:gradientRadius="1.0" />
        </shape>
    </item>

    <!-- Inner Shape -->
    <item android:top="38dp" android:bottom="8dp" android:left="7dp" android:right="10dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dip"/>
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>
